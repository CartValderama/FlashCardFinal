<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FlashCardProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</head>
<body>
    <header>
        <!-- Navigation bar with a light background -->
        <nav class="navbar navbar-light navbar-expand-md navbar-toggleable-md box-shadow" style="background-color: #BCEAD5">
            <div class="container-fluid">
                <!-- Brand/logo with a link to the Home page -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/logo.png" alt="logo-flashcard" style="width: 3rem; margin: 0 1rem" />
                </a>
                <!-- Button for toggling the navigation menu on smaller screens -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-md-inline-flex justify-content-between">
                    <!-- Navigation links -->
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Home link -->
                        <li class="nav-item me-5">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <!-- Library link -->
                        <li class="nav-item me-5">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Library" asp-action="ListFolderAndDeck">Library</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial"/>
                </div>
            </div>
        </nav>
    </header>
    <main role="main">
        <!-- Main content, including the body and optional scripts section -->
        @RenderBody()
        @RenderSection("Scripts", required: false)
    </main>
    <!-- Reference to a site-specific JavaScript file -->
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
