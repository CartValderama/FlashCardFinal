@model Deck

<div class="modal fade" id="deletedeck" tabindex="-1" role="dialog" aria-labelledby="deletemodal" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete Deck</h5>
                <button type="button" class="btn btn-transparent" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-sm d-flex bg-white justify-content-between ps-5 pe-5">
                    <div class="d-flex flex-column ">
                        <div>
                            <!-- Displaying deck details including ID, creation date, name, and the number of cards -->
                            <div class="text-danger-emphasis">
                                <p><i class="fa-solid fa-folder-closed me-2"></i> Deck ID: @Model.DeckId</p>
                                <p><i class="fa-regular fa-calendar-days me-2"></i> Date Created: @Model.CreationDate</p>
                                <p><i class="fa-solid fa-tag me-2"></i> Deck Name: @Model.DeckName</p>
                            </div>
                            <hr />
                            <h6 class="text-danger">Are you sure that you want to delete this deck?</h6>
                        </div>
                    </div>
                    <!-- Visual representation of the deck to be deleted (hidden on larger screens) -->
                    <div class="w-50 delete-deck d-none d-lg-block"></div>
                </div>
            </div>
            <div class="modal-footer d-flex justify-content-between">
                <!-- Button to go back to the deck dashboard without deleting -->
                <a asp-controller="Deck"
                   asp-action="DeckDashboard"
                   asp-route-deckid="@Model.DeckId"
                   asp-route-folderid="@Model.FolderId"
                   class="btn btn-secondary">
                    <i class="fa-solid fa-arrow-rotate-left"></i>
                </a>
                <!-- Form for submitting the deck deletion (POST request) -->
                <form asp-controller="Deck"
                      asp-action="DeleteConfirmedDeck"
                      asp-route-deckid="@Model.DeckId"
                      method="post">
                    <!-- Button to confirm and proceed with deck deletion -->
                    <button type="submit" class="btn btn-danger">
                        <i class="fa-solid fa-trash"></i>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
