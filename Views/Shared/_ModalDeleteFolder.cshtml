@model Folder

<div class="modal fade" id="deletefolder" tabindex="-1" role="dialog" aria-labelledby="deletemodal" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <!-- Modal title -->
                <h5 class="modal-title" id="exampleModalLabel">Delete Folder</h5>
                <!-- Close button to dismiss the modal -->
                <button type="button" class="btn btn-transparent" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Container for modal body content -->
                <div class="container-sm d-flex bg-white justify-content-between ps-5 pe-5">
                    <div class="d-flex flex-column ">
                        <div>
                            <!-- Displaying folder details including ID, creation date, name, and the number of decks -->
                            <div class="text-danger-emphasis">
                                <p><i class="fa-solid fa-folder-closed me-2"></i> Folder ID: @Model.FolderId</p>
                                <p><i class="fa-regular fa-calendar-days me-2"></i> Date Created: @Model.CreationDate</p>
                                <p><i class="fa-solid fa-tag me-2"></i> Folder Name: @Model.FolderName</p>
                            </div>
                            <hr />
                            <h6 class="text-danger">Are you sure that you want to delete this folder?</h6>
                        </div>
                    </div>
                    <!-- Visual representation of the folder to be deleted (hidden on larger screens) -->
                    <div class="w-50 delete-folder d-none d-lg-block"></div>
                </div>
            </div>
            <div class="modal-footer d-flex justify-content-between">
                <!-- Button to go back to the folder dashboard without deleting -->
                <a asp-controller="Folder"
                   asp-action="FolderDashboard"
                   asp-route-folderid="@Model.FolderId"
                   class="btn btn-secondary">
                    <i class="fa-solid fa-arrow-rotate-left"></i>
                </a>
                <!-- Form for submitting the folder deletion (POST request) -->
                <form asp-controller="Folder"
                      asp-action="DeleteConfirmedFolder"
                      asp-route-folderid="@Model.FolderId"
                      method="post">
                    <!-- Button to confirm and proceed with folder deletion -->
                    <button type="submit" class="btn btn-danger">
                        <i class="fa-solid fa-trash"></i>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
