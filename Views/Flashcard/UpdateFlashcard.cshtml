@model Flashcard

<section class="w-100 vh-100 mt-5 create-flashcard">
    <!-- Container for the create flashcard section -->
    <div class="container d-flex w-75 justify-content-between border border-1 p-0 shadow-sm bg-body rounded">
        <!-- Left section with background color and quote -->
        <div class="d-none d-md-block text-center w-50" style="background-color: #BCEAD5">
            <div class="p-5 mt-5">
                <!-- Icon and quote -->
                <i class="fa-solid fa-file-pen fa-9x mt-4 mb-4" style="color: #8ec3b0;"></i>
                <figure>
                    <blockquote class="blockquote">
                        <p> “Change is the end result of all true learning.”</p>
                    </blockquote>
                    <figcaption class="blockquote-footer">
                        <cite title="Source Title">Elijah Cuady</cite>
                    </figcaption>
                </figure>
            </div>
        </div>
        <!-- Right section for updating a flashcard -->
        <div class="p-5 w-100">
            <h2>Update Flashcard</h2>
            <hr />
            <form asp-action="UpdateFlashcard"
                  asp-route-flashcardid="@Model.FlashcardId"
                  asp-route-deckid="@Model.DeckId"
                  class="d-flex flex-column justify-content-between h-75">
                <!-- Hidden field for FlashcardId -->
                <input type="hidden" asp-for="FlashcardId" />
                <div>
                    <!-- Input field for Question -->
                    <div class="form-outline mb-4">
                        <label asp-for="Question"></label>
                        <input asp-for="Question" class="form-control" />
                        <span asp-validation-for="Question" class="text-danger"></span>
                    </div>
                    <!-- Input field for Answer -->
                    <div class="form-outline mb-4">
                        <label asp-for="Answer"></label>
                        <input asp-for="Answer" class="form-control" />
                        <span asp-validation-for="Answer" class="text-danger"></span>
                    </div>
                </div>
                <div class="d-flex justify-content-between">
                    <!-- Submit button -->
                    <button type="submit" class="btn btn-success">
                        <i class="fa-solid fa-check"></i>
                    </button>
                    <!-- Return to Deck Dashboard button -->
                    <a asp-controller="Deck"
                       asp-action="DeckDashboard"
                       asp-route-deckid="@Model.DeckId"
                       class="btn btn-secondary">
                        <i class="fa-solid fa-arrow-rotate-left"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>
</section>

